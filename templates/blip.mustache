<div class="blip {{type}}" data-type="{{type}}" data-user="{{user}}" data-blipid="{{id}}" >
  <div class="main">
    <div class="avatar_box">
      {{#user_avatar_url}}
      <span class="user_avatar"><img width="50px" height="50px" alt="Avatar {{username}}" src="{{user_avatar_url}}" /></span>
      {{/user_avatar_url}}
<!--
      {{#recipient_avatar_url}}
      <span class="recipient_avatar"> <img alt="Avatar {{recipientname}}" src="{{recipient_avatar_url}}" /> </span>
      {{/recipient_avatar_url}}
-->
    </div>
    <div class="body">
      <span class="user">
        <a data-action="user" data-username="{{username}}" class="user" href="http://blip.pl/users/{{username}}/dashboard">{{username}}</a>
      </span>
      {{#recipientname}}
        <span class="arrow">{{msg_arrow}}</span>
        <span class="recipient">
          <a class="recipient" data-action="user" data-username="{{recipientname}}" href="http://blip.pl/users/{{recipientname}}/dashboard">{{recipientname}}</a>
        </span>
      {{/recipientname}}
      <span>{{{body}}}</span>
      {{#picture}}
      <br/>
      <span class="pic"><input type="image" src="{{picture_thumb}}" data-action="picture" data-url="{{picture}}" /></span>
      {{/picture}}
    </div>
  </div>
  <div class="side">
    <div class="meta">
      <span class="created_at">
        <a data-action="link" data-url="{{blip_url}}" href="{{blip_url}}" title="{{created_at}}">{{created_at}}</a>
      </span>
      &nbsp;
      <span class="transport">{{transport}}</span>
    </div>
    <div class="actions">
      <input title="Cytuj"     type="image" src="assets/quote_black_16.png"  data-action="quote"   data-url="{{blip_url}}"  />
      {{^is_own}}
        <input title="Cytuj z wiadomością" type="image" src="assets/message_quote_16.png" data-action="message" data-messagestring="{{message_string}} {{blip_url}} "  />
        <input title="Wiadomość" type="image" src="assets/message_white_16.png" data-action="message" data-messagestring="{{message_string}}"  />
      {{/is_own}}
      {{#is_own}}
        <input title="Usuń"      type="image" src="assets/remove_black_16.png"   data-action="delete"  data-blipid="{{id}}"  />
      {{/is_own}}
      <input title="Dyskusja"  type="image" src="assets/discussion_black_16.png"  data-action="thread"  data-url="{{blip_url}}"  />
    </div>
  </div>
</div>
